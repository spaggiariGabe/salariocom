//BR-PT -----
using System;

namespace MyApp
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Escreva o nome completo: ");
            string nome = (Console.ReadLine());
            double salario, bruto, vendas, num1;
            Console.WriteLine("Coloque o Salario fixo, sem pontuação (ex: 1500): ");
            bruto = double.Parse(Console.ReadLine());
            Console.WriteLine("Coloque o valor das Vendas (em dinheiro e sem pontuação, ex: 1500): ");
            vendas = double.Parse(Console.ReadLine());
            Console.WriteLine("Insira a porcentagem de comissão (ex: 0,2 = 20%, 0,8 = 80%): ");
            num1 = double.Parse(Console.ReadLine());
            salario = bruto + (vendas * num1);
            Console.WriteLine("Nome Completo: " + nome);
            Console.WriteLine("Salario com a comissão: " + salario);
            Console.WriteLine("Vendas: " + vendas);
        }
    }
}
//o codigo termina aqui

//EN -----

using System;

namespace MyApp
{
     class Program
     {
         static void Main(string[] args)
         {
             Console.WriteLine("Write the full name: ");
             string name = (Console.ReadLine());
             double salary, gross, sales, num1;
             Console.WriteLine("Enter the Fixed Salary, without punctuation (ex: 1500): ");
             raw = double.Parse(Console.ReadLine());
             Console.WriteLine("Enter the Sales amount (in cash and without punctuation, eg 1500): ");
             sales = double.Parse(Console.ReadLine());
             Console.WriteLine("Enter commission percentage (eg 0.2 = 20%, 0.8 = 80%): ");
             num1 = double.Parse(Console.ReadLine());
             salary = gross + (sales * num1);
             Console.WriteLine("Full Name: " + name);
             Console.WriteLine("Salary with commission: " + salary);
             Console.WriteLine("Sales: " + sales);
         }
     }
}
